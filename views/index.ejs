<%- include("partials/header") %>
<div class="ui main  text container ">
	<div class=" ui huge header">My Blogs <i id="bb" class="headphones icon"></i></div>
	<div class="ui top attached segment">
		<div class=" ui divided items">
			<%blogs.forEach(function(blog){%>
            <div class="item">
				<div class="image"><img src="<%=blog.image%>"></div>
				<div class="content">
					<a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
					<div class="meta">
						<span><%=blog.created.toDateString()%></span>
					</div>
					<div>
						<p><%-blog.body.substring(0,30)%>..</p>
					</div>
					<div class="extra">
						<a class="ui blue button" href="/blogs/<%=blog._id%>">Read More<i id="ll" class="hand point up outline icon"></i></a>
					</div>
				</div>    
		    </div>
			<%})%>
		</div>	
	</div>
</div>

<%- include("partials/footer") %>